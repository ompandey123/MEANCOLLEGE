<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>
<body>
    <a href="/add">Add User</a>
    <% if (isLoggedIn) { %>
        <p>Welcome, <%= username %>!</p>
        <table border="5px">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Image</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item)=>{ %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.email %></td>
                        <td><img src="/uploads/<%= item.Image %>" width="100" height="100"></td>
                        <td><form action="/delete/<%= item._id %>" method="get">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit">Delete</button>
                        </form></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <a href="/logout">Logout</a><br><br>
    <% } else { %>
        <p>Please Login</p>
        <a href="/login">Please Login Here</a>
    <% } %>
    
</body>
</html>